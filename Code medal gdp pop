    {
      "name": "thisDist",
      "value": 0,
      "on":[{
        "events": "mousemove, touchmove",
        "update": "isActive ? sqrt(pow(x()-tX, 2) + pow(y()-tY, 2)) : thisDist"
      }]
    },
    {
      "name": "prevDist",
      "value": 0,
      "on":[{
        "events": "mousemove, touchmove",
        "update": "isActive ? sqrt(pow(x()-pX, 2) + pow(y()-pY, 2)): prevDist"
